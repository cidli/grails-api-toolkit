// NOTES

/* 'permitAll' needs to always come first so other roles can make use of it
* as they come afterward

net.nosegrind.IOState
*/

	
{
    "NAME":"iostate",
    "VALUES": {
        "name": {
            "type": "String",
            "description":"IO State name"
        }
    },
	"CURRENTSTABLE": "1",
	"VERSION": {
		"1": {
			"DEFAULTACTION":"show",
	        "URI": {
	            "show": {
	             	"METHOD":"GET",
	            	"DESCRIPTION":"Show IOState",
	            	"ROLES":["ROLE_ADMIN","ROLE_ARCH"],
	            	"BATCH":["ROLE_ADMIN","ROLE_ARCH"],
	                "REQUEST": {
	                    "permitAll":["name"]
	                },
	                "RESPONSE": {
	                	"permitAll":["id","title","sectionId","statId","version"]
	                }
	            },
	            "update": {
	            	"METHOD":"POST",
	            	"DESCRIPTION":"Update IOState",
	            	"ROLES":["ROLE_ADMIN","ROLE_ARCH"],
	            	"BATCH":["ROLE_ADMIN","ROLE_ARCH"],
	                "REQUEST": {
	                    "permitAll":[]
	                },
	                "RESPONSE": {
	                    "permitAll":[]
	                }
	            }
	        }
		}
	}
}
