/* JSON API Object Example
*
* APIObject rules for modification of existing document specification:
*
* - Rules/Checks/Descriptors MUST apply to api communication layer either for a process directly occurring or affecting by 
*    the request/response
* - MUST be usable by all clients/privileges even if it isn't
* - SHOULD be applicable to ALL methods; if not, it belongs either in client request or business logic.

*/

{	
	"VERSION": {
	    "1": {
	        "VALUES": {
	            "id": {
	                "type": "PKEY"
	            },
	            "testdata": {
	                "type": "String",
	                "mockData": "blahblahblah"
	            }
	        },
	        "URI": {
	            "test/show": {
	            	"METHOD":"GET",
	            	"DESCRIPTION":"Get test data",
	            	"ROLES":["ROLE_ADMIN","ROLE_USER"],
	                "REQUEST": {
	                    "permitAll":["id"]
	                },
	                "RESPONSE": {
	                	"permitAll":["id"],
	                    "ROLE_ADMIN":["testdata"],
	                    "ROLE_USER":["testdata"]
	                }
	            },
	            "test/create": {
	            	"METHOD":"PUT",
	            	"DESCRIPTION":"Create test data",
	            	"ROLES":["ROLE_ADMIN","ROLE_USER"],
	                "REQUEST": {
	                    "permitAll":["testdata"]
	                },
	                "RESPONSE": {
	                    "permitAll":["id"]
	                },
	                "ERROR":{"304_NOT_MODIFIED":""}
	            },
	        }
	    }
    }
}
